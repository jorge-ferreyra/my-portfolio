  function handleTranslate (width) {
    if (theme === 'light') {
      if (width > 1250) {
        if (currentTranslate !== '26px')
          span.style.translate = '26px'
          currentTranslate = '26px'
        }
      if (width <= 1250 && width > 935) {
        if (currentTranslate !== '24px')
        span.style.translate = '24px'
        currentTranslate = '24px'
      }
      if (width <= 935 && width > 500) {
        if (currentTranslate !== '15px')
        span.style.translate = '15px'
        currentTranslate = '15px'
      }
      if (width <= 500) {
        if (currentTranslate !== '17px')
        span.style.translate = '17px'
        currentTranslate = '17px'
      } 
    } else {
      if (width > 1250) {
          currentTranslate = '26px'
        }
      if (width <= 1250 && width > 935) {
        currentTranslate = '24px'
      }
      if (width <= 935 && width > 500) {
        currentTranslate = '15px'
      }
      if (width <= 500) {
        currentTranslate = '17px'
      } 
      span.style.translate = '0'
    }
  }

