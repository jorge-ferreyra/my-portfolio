<script>
const body = document.querySelector('body')
const navbar = document.getElementById('navbar')
const childrensNavbar = document.querySelectorAll('#navigate-anchor')
const cardTheme = document.getElementById('card-theme')
const moon = document.getElementById('moon')
const button = document.getElementById('button-theme')
const span = document.getElementById('span-theme')
const sun = document.getElementById('sun')
const backdropNav = document.getElementById('backdrop')




body.style.background = 'linear-gradient(rgb(2, 0, 19), rgb(1, 0, 10))'
navbar.style.background = 'rgba(255, 255, 255, .015)'
cardTheme.style.background = 'rgba(255, 255, 255, .04)'
backdropNav.style.background = '#D069FF14'
sun.style.opacity = '.5'

let theme = 'dark'
button.addEventListener('click', () => {
  if (theme === 'dark') {
    moon.style.opacity = '.5'
    span.style.transform = 'translate(20px, 0)'
    span.style.background = '#8759FF'
    sun.style.opacity = '1'
    body.style.background = 'linear-gradient(rgba(86, 86, 253, 86), #D069FF93)'
    navbar.style.background = 'rgba(0, 0, 0, .5)'
    navbar.classList.remove('animate-blurItDark')
    navbar.classList.add('animate-blurItLight')
    childrensNavbar.forEach(anchor => {
      anchor.classList.remove('animate-textDark')
      anchor.classList.add('animate-textLight')
    })

    cardTheme.style.background = 'rgba(0, 0, 0, .5)'
    cardTheme.classList.remove('animate-blurItDark')
    cardTheme.classList.add('animate-blurItLight')
    backdropNav.style.background = '#603db9'


    theme = 'light'
  } else if (theme === 'light') {
    moon.style.opacity = '1'
    span.style.transform = 'translate(0, 0)'
    span.style.background = 'rgb(148, 148, 255)'
    sun.style.opacity = '.5'
    body.style.background = 'linear-gradient(rgb(2, 0, 19), rgb(1, 0, 10))'
    navbar.style.background = 'rgba(255, 255, 255, .015)'
    navbar.classList.remove('animate-blurItLight')
    navbar.classList.add('animate-blurItDark')
    childrensNavbar.forEach(anchor => {
      anchor.classList.remove('animate-textLight')
      anchor.classList.add('animate-textDark')
    })

    cardTheme.style.background = 'rgba(255, 255, 255, .04)'
    cardTheme.classList.remove('animate-blurItLight')
    cardTheme.classList.add('animate-blurItDark')
    backdropNav.style.background = '#D069FF14'


    theme = 'dark'
  }
})
</script>

<script>
  const navigateButton = document.querySelectorAll('header ul li a')
  navigateButton.forEach(anchor => {
    anchor.addEventListener('click', (e) => {
      e.preventDefault()
      const targetId = anchor.getAttribute('href')
      const targetElement = document.querySelector(targetId)
      if (targetElement instanceof HTMLElement) {
        window.scrollTo({ top: targetElement.offsetTop - 100, behavior: 'smooth' })
      }
    })
  })
</script>

<script>
  const listOfItems = document.querySelectorAll('header ul li a')
  const backdrop = document.querySelector('#backdrop') as HTMLElement;
  listOfItems.forEach(item => {
    item.addEventListener('mouseenter', () => {
      const { left, top, width, height } = item.getBoundingClientRect();

      backdrop.style.left = `${left}px`;
      backdrop.style.top = `${top}px`;
      backdrop.style.width = `${width}px`;
      backdrop.style.height = `${height}px`;
      backdrop.style.opacity = '1';
      backdrop.style.overflow = 'visible';
    });

    item.addEventListener('mouseleave', () => {
      backdrop.style.opacity = '0';
      backdrop.style.overflow = 'hidden';
    });
  });
</script>
