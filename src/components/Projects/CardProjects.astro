---

interface Props {
  title: string,
  img: string,
  link: string,
  description: string
}

const { title, img, link, description } = Astro.props

---

<section class="w-full h-[520px] relative rounded-lg">
  <a class="absolute inset-0 cursor-pointer" href={link}></a>
  <header class="w-full h-[full] z-10">
    <img class="w-full h-full rounded-lg z-10" src={img} alt="">
  </header>

  <article class="bg-boldsea2 w-full h-[120px] p-[20px] rounded-es-lg rounded-ee-lg absolute bottom-0 z-[-1]">
    <div>
      <h1 class="text-fontblue font-bold text-[24px]">{title}</h1>
    </div>
    <div>
      <p class="text-fontbluelight">{description}</p>
    </div>
  </article>
</section>