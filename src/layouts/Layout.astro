---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="w-full h-[1800px]">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<style>
			/* Aplicar estilos globales de Tailwind */
			@import 'tailwindcss/base';
			@import 'tailwindcss/components';
			@import 'tailwindcss/utilities';
	</style>
		<title>{title}</title>
	</head>
	<body class="w-full h-full bg-gradient-to-b from-ocean to-blackmatter relative">
		<slot />
	</body>
</html>